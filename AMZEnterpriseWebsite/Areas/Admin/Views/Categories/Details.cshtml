@model Category

@{
    ViewData["Title"] = "جزئیات دسته";

    Dictionary<string, string> PVModel = new Dictionary<string, string>();
    PVModel.Add("MainTitle", "دسته بندی ها");
    PVModel.Add("Title", "جزئیات");
    PVModel.Add("Style", "bg-warning");
    PVModel.Add("Icon", "fa fa-list-ul");
}


<partial name="PartialViews/_EditPV" model="@PVModel" />


<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-lg-6 col-md-8 col-sm-10 col-12 m-auto">
            <div class="form-group">
                <label asp-for="ParentId"></label>

                @if (Model.Parent != null)
                {
                    <input type="text" value="@Model.Parent.Name" disabled="disabled" class="form-control" />
                }
                else
                {
                    <input type="text" value="ندارد" disabled="disabled" class="form-control" />
                }

            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" value="@Model.Name" disabled="disabled" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UrlName"></label>
                <input type="text" value="@Model.UrlName" disabled="disabled" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateTime"></label>
                <input type="text" value="@Model.DateTime.ToPersianDigitalDateTimeString()" disabled="disabled" class="form-control" />
            </div>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-block btn-primary py-4">ویرایش</a>

        </div>
    </div>
</div>