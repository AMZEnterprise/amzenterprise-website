@model IEnumerable<MyProgress>

@{
    ViewData["Title"] = "توانایی ها";
}


<section id="topLabel">
    <div class="container-fluid">
        <div class="row text-white">
            <div class="col-12">
                <h2><span class="fa fa-paint-brush"></span> توانایی ها</h2>
            </div>
        </div>
    </div>
</section>
<a asp-action="Create" class="btn btn-outline-success btn-block py-5 rounded-0 mt-1">
    <span class="fa fa-plus"></span>
    <span>اضافه کردن</span>
</a>

<div class="table-responsive mt-1">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Topic)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProgressValuePercentage)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgressValuePercentage)
                </td>
                <td>
                    <partial name="PartialViews/_TableButtonsPV" model="@item.Id" />
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
