@model AMZEnterpriseWebsite.Infrastructure.PaginatedList<Post>

@{
    ViewData["Title"] = "پست ها";
}

<section id="topLabel">
    <div class="container-fluid">
        <div class="row text-white">
            <div class="col-12">
                <h2><span class="fa fa-newspaper"></span> پست ها</h2>
            </div>
        </div>
    </div>
</section>
<a asp-action="Create" class="btn btn-outline-success btn-block py-5 rounded-0 mt-1">
    <span class="fa fa-plus"></span>
    <span>اضافه کردن</span>
</a>


<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-12">
            <form method="get">
                <div class="input-group">
                    <input type="search" value="@ViewData["CurrentFilter"]" name="searchString" placeholder="جستجو بر روی عنوان و دسته بندی ..." class="form-control" />
                    <div class="input-group-append" title="جستجو">
                        <button class="btn btn-danger">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="container-fluid mt-2">
    <div class="row">
        <div class="col-6">
            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-secondary btn-block @nextDisabled">
                <span class="fa fa-angle-right"></span>
                <span class="ml-3">بعدی</span>
            </a>
        </div>
        <div class="col-6">
            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-secondary btn-block @prevDisabled">
                <span class="mr-3">قبلی</span>
                <span class="fa fa-angle-left"></span>
            </a>
        </div>
    </div>
</div>


<div class="table-responsive mt-1">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]">عنوان</a>
                </th>
                <th>
                    <span>برچسب ها</span>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CategorySortParm"]">دسته بندی</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">تاریخ ایجاد</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]">وضعیت</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["EditDateSortParm"]">تاریخ آخرین ویرایش</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @foreach (var pt in item.PostAndTags)
                    {
                        if (pt.Tag != null)
                        {
                            <span>@pt.Tag.Name</span>
                            <br>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <span>@item.DateTime.ToPersianDigitalDateTimeString()</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <span>@item.LastEditDate.ToPersianDigitalDateTimeString()</span>
                </td>


                <td>
                    <partial name="PartialViews/_TableButtonsPV" model="@item.Id" />
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>
