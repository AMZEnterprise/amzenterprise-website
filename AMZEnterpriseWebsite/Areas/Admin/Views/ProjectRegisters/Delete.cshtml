@model ProjectRegister

@{
    ViewData["Title"] = "حذف سفارش";

    Dictionary<string, string> PVModel = new Dictionary<string, string>();
    PVModel.Add("MainTitle", "سفارش ها");
    PVModel.Add("Title", "حذف");
    PVModel.Add("Style", "bg-danger");
    PVModel.Add("Icon", "fa fa-shopping-cart");
}


<partial name="PartialViews/_EditPV" model="@PVModel" />

<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-lg-6 col-md-8 col-sm-10 col-12 m-auto">

            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="ProjectType"></label>
                <input type="text" value="@Html.DisplayFor(m=>Model.ProjectType)" disabled="disabled" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="SocialMediaAccount"></label>
                <input asp-for="SocialMediaAccount" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" disabled="disabled" cols="10" rows="6"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Status"></label>
                <input type="text" value="@Html.DisplayFor(m=>Model.Status)" disabled="disabled" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateTime"></label>
                <input type="text" value="@Model.DateTime.ToPersianDigitalDateTimeString()" disabled="disabled" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DoneDate"></label>
                <input type="text" value="@Model.DoneDate?.ToPersianDigitalDateTimeString()" disabled="disabled" class="form-control" />
            </div>


            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="حذف" class="btn btn-block btn-danger py-4" />
            </form>

        </div>
    </div>
</div>