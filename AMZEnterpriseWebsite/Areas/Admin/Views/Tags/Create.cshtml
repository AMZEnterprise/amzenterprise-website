@model Tag

@{
    ViewData["Title"] = "ایجاد برچسب";

    Dictionary<string, string> PVModel = new Dictionary<string, string>();
    PVModel.Add("MainTitle", "برچسب ها");
    PVModel.Add("Title", "ایجاد");
    PVModel.Add("Style", "bg-success");
    PVModel.Add("Icon", "fa fa-tag");
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<partial name="PartialViews/_EditPV" model="@PVModel" />

<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-lg-6 col-md-8 col-sm-10 col-12 m-auto">
            <form asp-action="Create">

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UrlName"></label>
                    <input asp-for="UrlName" class="form-control" />
                    <span asp-validation-for="UrlName"></span>
                </div>

                <input type="hidden" asp-for="DateTime" value="@DateTime.Now" />

                <div class="form-group">
                    <input type="submit" value="ایجاد" class="btn btn-block btn-success py-4" />
                </div>
            </form>
        </div>
    </div>
</div>